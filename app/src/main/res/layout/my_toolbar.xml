<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myToolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:elevation="4dp">

    <com.zlylib.titlebarlib.widget.ActionBarEx
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:ab_immersion="immersed"
        app:ab_bottomLineHeight="10dp"
        app:ab_bottomLineOutside="true"
        app:ab_statusBarMode="dark"
        app:ab_statusBarColor="@color/black"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/tv_title_refresh_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="标题"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera_capture_record_iv_splash"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/camera_ic_capture_flash_off_24dp" />



            </LinearLayout>

        </RelativeLayout>

    </com.zlylib.titlebarlib.widget.ActionBarEx>
</FrameLayout>